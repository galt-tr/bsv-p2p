{
  "name": "bsv-p2p",
  "version": "0.1.0",
  "description": "P2P communication and BSV payment channels for OpenClaw bots",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bsv-p2p": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "cli": "tsx src/cli/index.ts",
    "daemon": "tsx src/daemon/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run test/e2e",
    "lint": "eslint src test"
